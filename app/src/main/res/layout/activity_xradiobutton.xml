<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.runtai.xradiobutton.PayRadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        my:orientation="vertical">

        <com.runtai.xradiobutton.PayRadioButton
            android:id="@+id/p1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xradiobutton_bg_selector"
            my:desc="支付银行卡支付，支付更安全"
            my:logo1="@drawable/ic_alipay_plugin"
            my:radio="@drawable/radio"
            my:title1="支付宝客户端支付" />

        <com.runtai.xradiobutton.PayRadioButton
            android:id="@+id/p2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xradiobutton_bg_selector"
            my:desc="支持银行卡支付，无需登录"
            my:logo1="@drawable/ic_alipay_wap"
            my:radio="@drawable/radio"
            my:title1="支付宝网页支付" />

        <com.runtai.xradiobutton.PayRadioButton
            android:id="@+id/p3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xradiobutton_bg_selector"
            my:desc="支持手机网银支付"
            my:logo1="@drawable/ic_uppay_plugin"
            my:radio="@drawable/radio"
            my:title1="银联支付" />

        <com.runtai.xradiobutton.PayRadioButton
            android:id="@+id/p4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xradiobutton_bg_selector"
            my:desc="支持银行卡和财付通账号支付"
            my:logo1="@drawable/ic_tenpay_wap"
            my:radio="@drawable/radio"
            my:title1="财付通支付" />
    </com.runtai.xradiobutton.PayRadioGroup>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="#aaa"
        android:text="确认支付"
        android:textColor="#ffffff" />
</LinearLayout>